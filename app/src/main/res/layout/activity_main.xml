<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="329dp"
        android:layout_height="137dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:background="#fffff7" />

    <View
        android:id="@+id/view2"
        android:layout_width="329dp"
        android:layout_height="137dp"
        android:layout_below="@+id/view4"
        android:layout_centerHorizontal="true"
        android:background="#fffff7"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_alignTop="@+id/view2"
        android:text="Barack Obama"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/textView10"
        android:text="President of the USA"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:text="44th President of the USA. Recepient of the Nobel peace prize (although no one is quite certain what exactly for)." />

    <View
        android:id="@+id/view4"
        android:layout_width="329dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="#fffff7"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_alignTop="@+id/view4"
        android:text="Bruce Wayne"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/textView7"
        android:text="Billionaire"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="242dp"
        android:text="Incredibly smart billionaire industrialist and notorious playboy. Also very reclusive. Almost certainly the Batman." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_alignTop="@+id/view"
        android:text="Clark Kent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/textView4"
        android:text="Reporter"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/view"
        android:layout_alignTop="@+id/view"
        android:cropToPadding="true"
        app:srcCompat="@drawable/clarkkent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:text="Very quiet bespectacled reporter at the DailyPlanet. Clumsy fellow but well built and looks strikingly familiar. Wonder which celebrity he looks like." />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="54dp"
        android:layout_alignEnd="@+id/view"
        android:layout_alignTop="@+id/view4"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/brucewayne" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/view"
        android:layout_marginBottom="20dp"
        android:onClick="process"
        android:text="NEXT" />

    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignTop="@+id/next"
        android:onClick="process"
        android:text="MAP" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="39dp"
        android:layout_height="56dp"
        android:layout_alignEnd="@+id/view"
        android:layout_alignTop="@+id/view2"
        app:srcCompat="@drawable/barackobama" />

</RelativeLayout>